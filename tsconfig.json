{
  "compilerOptions": {
    "strict": true,
    "sourceMap": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2018",
    "lib": ["es2018"],
    "declaration": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "outDir": "dist",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "examples/**/*"
  ]
}
